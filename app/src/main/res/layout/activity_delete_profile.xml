<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/sign_up"
    tools:context=".deleteProfile">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Profile"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_marginBottom="60dp"/>
        <TextView
            android:id="@+id/textViewEmail"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textSize="16sp"
            android:text="Email"
            android:textColor="@color/golden"
            android:layout_marginBottom="30dp"
            android:background="@drawable/button_style_two"
            android:padding="20dp"/>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            app:boxStrokeColor="@drawable/edit_text_stroke_color_selector"
            app:hintTextAppearance="@style/HintTextAppearance"
            app:hintTextColor="@color/white"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/golden"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editViewPassword"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:inputType="textPassword"
                android:textSize="16sp"
                android:textColor="@color/golden" />
        </com.google.android.material.textfield.TextInputLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonAntication"
            android:layout_width="190dp"
            android:layout_height="37dp"
            android:background="@drawable/button_style_three"
            app:cornerRadius="10dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="AUTHENTICATION" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:gravity="center">
            <View
                android:layout_width="0dp"
                android:background="@color/liteBlue_liter"
                android:layout_height="2dp"
                android:layout_weight="1" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginBottom="25dp"
            android:id="@+id/textViewAuth"
            android:text="Your profile is not authenticated/verified yet!"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/golden"
            android:id="@+id/linearLayoutDeleteProfile"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/remove_user"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginStart="80dp"
                    android:layout_toStartOf="@id/loginOut"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/buttonDeleteProfile"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    app:cornerRadius="10dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:background="@drawable/button_style_four"
                    android:text="Delete your Profile"/>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>