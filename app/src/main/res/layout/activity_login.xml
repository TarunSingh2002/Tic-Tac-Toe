<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/sign_up"
    tools:context=".login">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/message_svgrepo_com"
            android:layout_gravity="center"
            android:paddingBottom="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="23dp"
            android:text="Welcome Back!"
            android:paddingTop="10dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:fontFamily="@font/robotolight"
            android:textColor="@color/white"/>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email address"
            android:paddingBottom="20dp"
            app:boxStrokeColor="@drawable/edit_text_stroke_color_selector"
            app:hintTextAppearance="@style/HintTextAppearance"
            app:hintTextColor="@color/white"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/email_string"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:inputType="textPersonName"
                android:textSize="16sp"
                android:textColor="@color/golden" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            app:boxStrokeColor="@drawable/edit_text_stroke_color_selector"
            app:hintTextAppearance="@style/HintTextAppearance"
            app:hintTextColor="@color/white"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/golden"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password_string"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:inputType="textPassword"
                android:textSize="16sp"
                android:textColor="@color/golden" />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:id="@+id/forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password?"
            android:paddingTop="10dp"
            android:textStyle="bold"
            android:layout_gravity="right"
            android:textColor="@color/liteBlue_liter"
            android:textSize="17sp"
            android:paddingBottom="20dp"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/button_style_three"
            app:cornerRadius="10dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Log in" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:paddingTop="30dp"
            android:gravity="center">
            <View
                android:layout_width="0dp"
                android:background="@color/liteBlue_liter"
                android:layout_height="2dp"
                android:layout_weight="1" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/liteBlue_liter"
                android:text="  Or continue with" />

            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="@color/liteBlue_liter"
                android:layout_weight="1" />
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/google"
                android:layout_gravity="left|center_vertical"
                android:layout_marginStart="127dp"
                android:layout_toStartOf="@id/button"
                />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/button_style_two"
                android:text="Google"/>
        </FrameLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="20dp">
            <TextView
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dont't have an account?"
                android:textStyle="bold"
                android:textColor="@color/liteBlue_liter"
                android:textSize="17sp"/>
            <TextView
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Sign up"
                android:textStyle="bold"
                android:textColor="@color/golden"
                android:textSize="17sp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>